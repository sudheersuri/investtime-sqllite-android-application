<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:background="@android:color/black"
    android:layout_height="wrap_content"
    android:elevation="20dp"
    android:layout_margin="5dp"
    android:layout_marginBottom="10dp">
    <LinearLayout
        android:layout_width="match_parent" android:weightSum="1"
        android:layout_height="50dp" android:id="@+id/mylayout" android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="24dp"
            android:id="@+id/activityname"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:drawableLeft="@drawable/timer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.3"
            android:textColor="#a9a9a9"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:textSize="24dp"
            android:id="@+id/investedtime"
            />
        <!--so our layout is set-->
    </LinearLayout>
</androidx.cardview.widget.CardView>